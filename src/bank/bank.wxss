page {
  background: #F2F2F2;
}
.bankContainer {

}
.bankContainer .selectType {
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.selectType .selectedBank, .selectType .selectedFood  {
  display: inline-block;
  font-size: 30rpx;
}
.selectType .selectedBank {
  margin-right: 200rpx;
}
.bankContainer .cardList {
  display: block;
}
.cardItem {
  display: block;
  padding: 20rpx 20rpx 20rpx 30rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
}
.cardItem .quota {
  float: left;
  width: 330rpx;
}
.cardItem .describe {
  float: left;
  width: 350rpx;
}
.cardItem .quota image {
  width: 300rpx;
  height: 200rpx;
  display: block;
}
.cardItem .quota text {
  font-size: 24rpx;
}
.cardItem .quota text:nth-of-type(2) {
  color: red;
}
.cardItem .describe text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.cardItem .describe label {
  color: #000;
  font-size: 20rpx;
  border: 1rpx solid #999999;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 5rpx;
}
.cardItem .describe label:nth-of-type(1) {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 26rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #999;
  margin-top: 10rpx;
  height: 100rpx;
  border: 0;
}
.selectCardBtn {
  position: fixed;
  width: 700rpx;
  height: 70rpx;
  background: #00DBB2;
  color: #fff;
  font-size: 28rpx;
  line-height: 70rpx;
  border: 0;
  border-radius: 50rpx;
  bottom: 10rpx;
  left: 40rpx;
  text-align: center;
}
