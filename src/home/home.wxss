page {
  background: #F2F2F2;
}
.home {
  width: 100%;
  height: 100%;
}
.banner {
  height: 240rpx;
  text-align: center;
  background: #00DBB2;
  color: #fff;
  overflow: hidden;
}
.banner text {
  margin-top: 80rpx;
  display: block;
}
.content {
  padding: 20rpx 50rpx;
  font-weight: 600;
}
.content .calendar .year {
  text-align: left;
  font-size: 30rpx;
  display: block;
}
.content .calendar .month {
  text-align: center;
  font-size: 180rpx;
  display: block;
}
.content .calendar .condition {
  font-size: 60rpx;
  text-align: center;
  display: block;
}
.content .calendar .describe {
  font-size: 20rpx;
  text-align: right;
  margin-top: 80rpx;
  display: block;
  color: #666666;
}
.content button {
  background: #00DBB2;
  color: #fff;
  font-weight: 400;
  width: 500rpx;
  border-radius: 50rpx;
  border: 0;
  margin-top: 100rpx;
}
