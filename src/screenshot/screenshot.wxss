page {
  background: #F2F2F2;
}
.mask {
  position: fixed;top: 0;left: 0; width: 100%;height: 100%;opacity: 0; display: flex;justify-content: center; align-items: center;
}
.canvasBox {
  position: fixed;
  top: 999999rpx;
  left: 0;
}
.canvasBox canvas {
  background: #fff;
}
.pictureDisplay {
  position: relative;
}
.pictureDisplay .saveImg {
  display: block;
  width: 720rpx;
  height: 1100rpx;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 20rpx;
}
.pictureDisplay .btnImg {
  width: 200rpx;
  height: 60rpx;
  background: #00C9A4;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  left: 265rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: 600;
  z-index: 99999;
}
.pk {
  width: 720rpx;
  height: 90rpx;
  background: #FFF;
  color: #00C9A4;
  border-radius: 50rpx;
  border: 1rpx solid #00C9A4;
  font-size: 30rpx;
  line-height: 90rpx;
  margin-bottom: 40rpx;
}
