page {
  background: #F2F2F2;
}
.walletFrame {
  width: 100%;
  height: 100%;
}
.deposit {
  background: #fff;
  height: .deposit ;
  overflow: hidden;
  background: #31DCB2;
  overflow: hidden;
  text-align: center;
  position: relative;
}
.deposit .portrait {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx auto 0 auto;
  clip-path: circle(50% at center);
  overflow: hidden;
}
.deposit .title {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  margin-top: 22rpx;
  margin-bottom: 20rpx;
}
.deposit .symbol {
  display: inline-block;
  text-align: center;
  font-size: 48rpx;
  color: #fff;
}
.deposit .totalAmount {
  display: inline-block;
  text-align: center;
  font-size: 84rpx;
  color: #fff;
}
.deposit .frequency {
  display: table;
  margin: 0 auto;
  font-size: 28rpx;
  font-weight: 400;
  color: #fff;
  background: #00C18D;
  padding: 4rpx 25rpx;
  border-radius: 50rpx;

}
.deposit .back {
  background: rgba(255, 255, 255, 0.2);
  height: 160rpx;
  margin-top: 60rpx;
}
.deposit .bonus {
  width: 375rpx;
  text-align: center;
  float: left;
  margin-top: 32rpx;
}
.deposit .bonus text {
  text-align: center;
  display: block;
  color: #fff;
  font-size: 40rpx;
}
.deposit .bonus label {
  text-align: center;
  display: block;
  color: #fff;
  font-size: 28rpx;
  margin-top: 20rpx;
  font-weight: 300;
}
.deposit button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0);
}
.record {
  background: #fff;
  margin-top: 20rpx;
}
.record .recordList {
  padding: 30rpx 60rpx;
  border: 1rpx solid #F2F2F2;
  overflow: hidden;
}
.record .recordList view {
  display: block;
  float: left;
}
.record .recordList view text {
  font-size: 26rpx;
  color: #000;
  display: block;
  margin-bottom: 20rpx;
}
.record .recordList view time {
  font-size: 26rpx;
  color: #999999;
  display: block;
}
.record .recordList label {
  display: block;
  color: #31DCB2;
  font-size: 40rpx;
  float: right;
  margin-top: 15rpx;
}
