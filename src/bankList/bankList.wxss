page {
  background: #F9F9F9;
}
.bankList {
  height: 320rpx;
  width: 100%;
  background: #fff;
}
.cardItem {
  display: block;
  /* padding: 20rpx 20rpx 20rpx 30rpx; */
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
}
.cardItem .navigator {
  display: block;
}
.cardItem .quota {
  float: left;
  width: 330rpx;
  padding: 20rpx 0 20rpx 30rpx;
}
.cardItem .describe {
  float: left;
  width: 350rpx;
  padding: 10rpx 0 20rpx 0;
}
.cardItem .quota image {
  width: 300rpx;
  height: 200rpx;
  display: block;
}
.cardItem .quota text {
  font-size: 24rpx;
}
.cardItem .quota text:nth-of-type(2) {
  color: red;
}
.cardItem .describe text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.cardItem .describe label {
  color: #000;
  font-size: 20rpx;
  border: 1rpx solid #999999;
  padding: 2rpx 10rpx;
  border-radius: 10rpx;
  display: inline-block;
  margin-right: 5rpx;
}
.cardItem .describe label:nth-of-type(1) {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 26rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #999;
  margin-top: 10rpx;
  width: 300rpx;
  height: 100rpx;
  border: 0;
}
.container .title {
  display: inline-block;
  text-align: left;
  color: #333333;
  font-size: 28rpx;
  font-weight: 600;
  border-left: 5rex solid #00DBB2;
  position: relative;
  text-align: left;
  margin: 30rpx 0 30rpx 50rpx;
}
.title::before {
  content: '';
  height: 36rpx;
  width: 6rpx;
  background: #00DBB2;
  position: absolute;
  top: 3rpx;
  left: -20rpx;
}
.themeCard {
  display: block;
  padding: 0 40rpx;
}
.themeCard .card-item {
  width: 200rpx;
  height: 200rpx;
  display: block;
  float: left;
  border-radius: 20rpx;
  overflow: hidden;
  background: #fff;
  margin: 10rpx 10rpx;
  position: relative;
  text-align: center;
}
.themeCard .card-item image {
  margin: 35rpx 0 0 50rpx;
  width: 100rpx;
  height: 100rpx;
  display: block;
}
.themeCard .card-item label {
  font-size: 28rpx;
  font-weight: 800;
  line-height: 330rpx;
  color: #666666;
}
.themeCard .card-item .cover {
  /* background: rgba(9,9,26,0.3); */
  width: 100%;
  height: 100%;
  position: absolute;
}
