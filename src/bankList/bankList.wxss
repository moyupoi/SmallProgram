.container {
  background: #F9F9F9;
}
.swiper {
  height: 300rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.swiper .banner-item {
  background: #00DBB2;
}
.swiper .banner-item text {
  display: block;
  text-align: center;
  margin-top: 50rpx;
  color: #fff;
}
.recommend {
  height: 320rpx;
  width: 100%;
  background: #fff;
}
.recommend .rec-item image {
  margin-left: 30rpx;
  width: 330rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
  margin-top: 30rpx;
}
.recommend .rec-item view {
  float: left;
  margin-top: 30rpx;
}
.recommend .rec-item view text {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
}
.recommend .rec-item view label {
  display: block;
  color: #999999;
  font-size: 26rpx;
}
.recommend .rec-item view button {
  color: #fff;
  background: #000;
  width: 200rpx;
  height: 55rpx;
  font-size: 24rpx;
  line-height: 55rpx;
  border-radius: 50rpx;
  margin-top: 20rpx;
}
.recommend .rec-item .rec-img {
  width: 50%;
  float: left;
}
.container .title {
  display: inline-block;
  text-align: left;
  font-size: 28rpx;
  font-weight: 600;
  border-left: 5rex solid #00DBB2;
  position: relative;
  text-align: left;
  margin: 30rpx 0 30rpx 50rpx;
}
.title::before {
  content: '';
  height: 36rpx;
  width: 6rpx;
  background: #00DBB2;
  position: absolute;
  top: 3rpx;
  left: -20rpx;
}
.office-card {
  display: block;
  flex-direction: row;
  justify-content: space-around;
  padding: 0 40rpx;
}
.office-card .card-item {
  width: 265rpx;
  display: inline-block;
  /* margin: 0 15rpx 30rpx 15rpx; */
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 25rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.office-card .card-item:nth-child(2n) {
  margin-right: 0;
}
.office-card .card-item image {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  margin-right: 50rpx;
}
.office-card .card-item view {
  display: inline-block;
}
.office-card .card-item view label {
  font-size: 30rpx;
  font-weight: 600;
  display: block;
}
.office-card .card-item view text {
  font-size: 24rpx;
  color: #ccc;
  display: block;
}
.office-card p {
  display: inline-block;
  font-size: 26rpx;
  clear: both;
  margin-top: 40rpx;
  position: relative;
}
.office-card p span {
  display: inline-block;
  color: red;
}
.office-card p::before {
  content: '';
  height: 1rpx;
  width: 270rpx;
  background: #ccc;
  position: absolute;
  top: -15rpx;
  left: 0rpx;
}
.query {
  width: 100%;
  text-align: center;
  height: 100rpx;
  background: #fff;
  border-radius: 0;
  border: 0;
  font-size: 30rpx;
  line-height: 100rpx;
}
button::after {
  border: none;
}
