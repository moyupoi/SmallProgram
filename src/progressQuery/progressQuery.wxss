page {
  background: #F2F2F2;
}
.progressQuery {
  width: 100%;
  height: 100%;
}
.progressList {

}
.progressList .item {
  background: #fff;
  height: 200rpx;
  margin-top: 30rpx;
  padding: 20rpx 60rpx;
  overflow: hidden;
  position: relative;
}
.progressList .item text:nth-of-type(1) {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  display: block;
}
.progressList .item text:nth-of-type(1):before {
  content: '';
  height: 36rpx;
  width: 6rpx;
  background: #00DBB2;
  position: absolute;
  top: 25rpx;
  left: 40rpx;
}
.progressList .item text:nth-of-type(2) {
  font-size: 28rpx;
  color: #333333;
  display: block;
  margin-top: 40rpx;
}
.progressList .item time {
  font-size: 24rpx;
  color: #999999;
  display: block;
  margin-top: 30rpx;
}
.progressList .item label {
  position: absolute;
  top: 150rpx;
  right: 40rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 10rpx;
  padding: 8rpx 18rpx;
  font-size: 25rpx;
}
