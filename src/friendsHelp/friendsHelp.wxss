page {
  background: #F2F2F2;
}
.friendsHelp {
  width: 100%;
  height: 100%;
}
.banner {
  height: 240rpx;
  text-align: center;
  background: #00DBB2;
  color: #fff;
  overflow: hidden;
}
.banner .portrait {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx auto 0 auto;
  clip-path: circle(50% at center);
  overflow: hidden;
}
.banner .userName {
  margin-top: 20rpx;
  display: block;
}
.helpDescribe {

}
.helpDescribe .title {
  display: block;
  width: 500rpx;
  padding: 40rpx 30rpx;
  background: #fff;
  margin: 50rpx auto 0 auto;
  border-radius: 10rpx;
}
.helpDescribe .title text {
  color: #05DCB4;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
}
.helpDescribe .portrait {
  display: block;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx 0 0 130rpx;
  clip-path: circle(50% at center);
  overflow: hidden;
}
.helpBtn {
  margin: 140rpx auto;
  background: #00DBB2;
  color: #fff;
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
}
.helpBtn::after {
  border: 0;
}
