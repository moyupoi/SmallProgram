page {
  background: #F2F2F2;
}
.moneyFrame {
  width: 100%;
  height: 100%;
}
.portrait {
  position: absolute;
  top: 25rpx;
  left: 315rpx;
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx auto 0 auto;
  clip-path: circle(50% at center);
  overflow: hidden;
}
.deposit {
  background: #fff;
  overflow: hidden;
  padding: 80rpx 0 60rpx;
  margin-top: 100rpx;
}
.deposit .title {
  display: block;
  text-align: center;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 20rpx;
}
.deposit .totalAmount {
  display: block;
  text-align: center;
  font-size: 45rpx;
  color: #31DCB2;
}
.deposit .bonus {
  width: 375rpx;
  text-align: center;
  float: left;
}
.deposit .bonus text {
  text-align: center;
  display: block;
  font-size: 30rpx;
}
.deposit .bonus label {
  text-align: center;
  display: block;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.record {
  background: #fff;
  margin-top: 20rpx;
}
.record .recordList {
  padding: 30rpx 60rpx;
  border: 1rpx solid #F2F2F2;
  overflow: hidden;
}
.record .recordList view {
  display: block;
  float: left;
}
.record .recordList view text {
  font-size: 26rpx;
  color: #000;
  display: block;
  margin-bottom: 20rpx;
}
.record .recordList view time {
  font-size: 26rpx;
  color: #999999;
  display: block;
}
.record .recordList label {
  display: block;
  color: #31DCB2;
  font-size: 40rpx;
  float: right;
  margin-top: 15rpx;
}
